<div class="container mt-3">
  <div class="header">
    <h1>Cocktails</h1>
  </div>

  <div class="container">
    <div class="row">
      <% @cocktails.each do |cocktail| %>
        <div class="col-12 col-md-6 col-lg-4">
          <%= link_to cocktail_path(cocktail), class: "product-link" do %>
            <div class="product-card my-3" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= cl_image_path cocktail.photo.key %>);">
              <p><%= cocktail.name %></p>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
